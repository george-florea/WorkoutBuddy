@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap" rel="stylesheet">

<style>
    .landing-btn-group {
        text-align: center;
    }

    .landing-btn-group .btn {
        width: 120px;
        height: 45px;
        display: inline-flex !important;
        font-weight: 700;
    }

    .landing-btn-group .btn + .btn {
        margin-left: 50px;
    }
</style>
@*<img class="bg-image" src="~/images/BgImage.jpg" style="height:100vh; width: 100%"/>*@
<div class="bg-image"
     style="background: url('/images/BgImage.jpg') no-repeat center fixed;
            background-size: cover;
            height: 100vh;overflow: auto; display: flex; align-items: flex-end;">
    <div  style="height: 30%"></div>
    <div  style="height: 35%"></div>
    <div class="d-flex justify-content-center" style="padding: 0 20px 70px;">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-3">
                    <div style="height:30%">
                        <img src="~/images/kisspng-muscle-arm-biceps-clip-art-5b5976046c3245.0931324215325895724432.png" style="
    height: 200%;
    width: 100%;
    position: relative;
    top: -60px;
    right: -40px;
    opacity: 0.7;
    transform: scaleX(-1);
" />
                    </div>
                </div>
                <div class="col-6">
                    <h1 class="text-white text-center" style="font-size:450%; font-family: 'Rubik Dirt', cursive; margin-bottom: 2px">Workout Buddy</h1>
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col">
                            <hr style="opacity: .8; height: 2px; color:white; margin-top: 3px;" />
                        </div>
                        <div class="col-2"></div>
                    </div>
                    <h3 class="text-white text-center" style="margin-top:2px; margin-bottom:15px; font-size:220%; font-family: 'Caveat', cursive;">Going to the gym has never been easier</h3>
                    <div class="landing-btn-group">
                            <a asp-controller="UserAccount" asp-action="Login" class="btn rounded-pill text-black d-flex justify-content-center align-items-center" style="background-color: rgb(196, 251, 109)">Login</a>
                            <a asp-controller="UserAccount" asp-action="Register" class="btn rounded-pill text-black d-flex justify-content-center align-items-center" style="background-color: rgb(196, 251, 109)">Register</a>
                    </div>
                </div>
                <div class="col-3">
                    <div style="height:30%">
                        <img src="~/images/kisspng-muscle-arm-biceps-clip-art-5b5976046c3245.0931324215325895724432.png" style="height:200%; width: 100%; position: relative; top: -60px; left: -30px; opacity: 0.7" />
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg-2"></div>

    </div>
</div>